<div class="btn-group">
	<a class="btn dropdown-toggle btn-primary btn-xlarge drop btn-block" data-toggle="dropdown" href="#">
	Search for Courses <span class="caret"></span> </a>

	<ul class="dropdown-menu outer" role="menu" aria-labelledby="dropdownMenu">

		<div class="drop-limit">
			
		<% @allCourses.sort { |a,b| a.course_title_long.downcase <=> b.course_title_long.downcase }.each do |course| %>
			<%= form_tag(controller: "users", action: "student_add_course") do %>
				<div><%= hidden_field_tag 'course_id', course.crse_id %></div>
				<%= submit_tag (course.course_title_long + "," + course.crse_id.to_s), class: "btn" %>
			<% end %>
			<li class="divider"></li>
		<% end %>

		</div>

	</ul>
</div>
