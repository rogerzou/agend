<% provide(:title, 'Add Course') %>
<h1 class="welcome">Search for Courses </h1>
<table class="table table-striped">
	<thead>  
		<tr>  
		<th>Subject</th>  
		<th>Course #</th>
		<th>Name</th>
		<th>Add/Delete</th>
		</tr>  
	</thead>
<% if @allCourses.length >= 1 %>
	<% @allCourses.sort { |a,b| a.course_title_long.downcase <=> b.course_title_long.downcase }.each do |course| %>
		<tbody>
			<tr>
			<td><%= course.subject %></td>
			<td><%= course.class_nbr.to_s %></td>
			<td><%= course.course_title_long %></td>
			<td>
			<%= form_tag(controller: "users", action: "student_add_course") do %>
				<div><%= hidden_field_tag 'course_id', course.crse_id %></div>
				<%= submit_tag "Add", class: "btn" %>
			<% end %>
			</td>

			</tr>
		</tbody>
	<% end %>
<% else %>

<% end %>

</table>

<h4> There are no additional courses available at the moment. </h4>
