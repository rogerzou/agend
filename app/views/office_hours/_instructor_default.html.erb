	<div class="office-hour inst hidden-phone">
		<div class="office-text">
			<% if office_hour.default %>
				<% d = "" %>
				<% if !office_hour.course.subject.nil? %>
					<% d = d + office_hour.course.subject.to_s + " " %>
				<% end %>
				<% if !office_hour.course.catalog_nbr.nil? %>
					<% d = d + office_hour.course.catalog_nbr.to_s + ": " %>
				<% end %>
				<% if !office_hour.course.course_title_long.nil? %>
					<% d = d + office_hour.course.course_title_long.to_s %>
				<% end %>
				<i class="course"><%=d%></i>
				<br>

				<i>Time:</i>&nbsp;<%a = office_hour.date.strftime('%I:%M %p')%> <%=a%> <i>to</i> 
				<%b = office_hour.end_time.strftime('%I:%M %p')%> <%=b%>

				<br>
				<i>Location:</i>&nbsp;<%c = office_hour.location%> <%=c%>
				
				<br>
				<i>Description:</i>&nbsp;<%c = office_hour.description%> <%=c%>
				<br>
				
				<% if current_user.instructor %>
				<%= link_to "delete", office_hour, method: :delete, thisCourse: params[:thisCourse], class: "btn btn-primary btn-xlarge del inst btn-block",
				                              data: { confirm: "You sure?" } %>
				<% end %>
				
				
			<% end %>
		</div>
	</div>



		<div class="office-hour inst visible-phone">
		<div class="office-text-mobile">
			<% if office_hour.default %>
				<% d = "" %>
				<% if !office_hour.course.subject.nil? %>
					<% d = d + office_hour.course.subject.to_s + " " %>
				<% end %>
				<% if !office_hour.course.catalog_nbr.nil? %>
					<% d = d + office_hour.course.catalog_nbr.to_s + ": " %>
				<% end %>
				<% if !office_hour.course.course_title_long.nil? %>
					<% d = d + office_hour.course.course_title_long.to_s %>
				<% end %>
				<i class="course"><%=d%></i>
				<br>
						<i class="mini-mobile">
							<%a = office_hour.date.strftime('%I:%M %p') %> <%=a%> to 
							<%b = office_hour.end_time.strftime('%I:%M %p') %> <%=b%>
						</i>

				<br>
				<i>Location:</i>&nbsp;<i class="mini-mobile-2"><%c = office_hour.location%> <%=c%></i>
				
				<br>
				<i>Description:</i>&nbsp;<i class="mini-mobile-2"><%c = office_hour.description%> <%=c%></i>
				<br>
				
				<% if current_user.instructor %>
				<%= link_to "delete", office_hour, method: :delete,
				                              data: { confirm: "You sure?" } %>
				<% end %>
				
				
			<% end %>
		</div>
	</div>
