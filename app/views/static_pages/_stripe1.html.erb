
<div class="stripe" id="home">
	<% if !flash.empty? %>
    <div class="center-side">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
  <% end %>
  <div class="row-fluid">
    <br>
    <%= image_tag("icon_main.png", :class => "img") %>
    
    <h2 class="subfirst">Office Hours Made Simpler.</h2>
    <br>
    <%= link_to "Register", signup_path, class: "btn btn-primary btn-xlarge btn-block"%>
    <br>
    <%= image_tag("front_page.png", :class => "img") %>
  </div>
</div>